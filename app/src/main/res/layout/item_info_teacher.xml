<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="58dp"
    android:background="@drawable/custom_blue_semcorners_item"
    android:layout_marginBottom="8dp">


    <TextView
        android:id="@+id/NameTeacher"
        android:layout_width="153dp"
        android:layout_height="17dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/involve_regular"
        android:text="Имя Фамилия Отчество"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="38dp"
        app:layout_constraintStart_toEndOf="@+id/NameTeacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <!-- add a Image image.png in your Drawable folder -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/circular" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="108dp"
        android:layout_height="13dp"
        android:fontFamily="@font/involve_regular"
        android:text="Должность, кафедра"
        android:textSize="10sp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/NameTeacher" />


</androidx.constraintlayout.widget.ConstraintLayout>