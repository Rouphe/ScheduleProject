<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_blue_semcorners_item"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NameDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/involve_medium"
            android:text="Среда"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/SeparatorNameAndNumDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/involve_medium"
            android:text="|"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/NumDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/involve_medium"
            android:text="12.10"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16dp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/additionalPeriodsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>