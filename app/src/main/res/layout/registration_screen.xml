<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPairIsNow"
    android:orientation="vertical"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Registration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/involve_medium"
            android:gravity="center"
            android:text="РЕГИСТРАЦИЯ"
            android:textColor="@color/text"
            android:textSize="32sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/student"
                    android:layout_width="130dp"
                    android:layout_height="99dp"
                    android:background="@drawable/custom_registr_semcorners_item"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/student_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/student_icon" />

                    <TextView
                        android:id="@+id/studentRoleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/involve_bold"
                        android:text="Студент"
                        android:textColor="@color/textOnPrimary"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/teacher"
                    android:layout_width="130dp"
                    android:layout_height="99dp"
                    android:layout_marginStart="21dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/teacher_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/teacher_icon" />

                    <TextView
                        android:id="@+id/teacherRoleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/involve_bold"
                        android:text="Преподаватель"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/surname"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:hint="Фамилия..."
                    android:inputType="textShortMessage"
                    android:padding="12dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:hint="Имя..."
                    android:inputType="textShortMessage"
                    android:padding="12dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mid_name"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:hint="Отчество..."
                    android:inputType="textShortMessage"
                    android:padding="12dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/faculty"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:padding="12dp"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/group_for_reg"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:padding="12dp"
                    android:dropDownHeight="250dp"
                    android:textSize="15sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/subgroup_number_for_reg"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:padding="12dp"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:hint="E-mail..."
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_white_semcorners_item"
                    android:fontFamily="@font/involve_semibold"
                    android:hint="Пароль..."
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_button"
                    android:layout_width="281dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_registr_semcorners_item"
                    android:fontFamily="@font/involve_bold"
                    android:gravity="center"
                    android:text="Зарегистрироваться"
                    android:textColor="@color/textOnPrimary"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

