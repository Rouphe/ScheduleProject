<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPairIsNow"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/resetLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPairIsNow"
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/involve_bold"
            android:text="Сброс пароля"
            android:textColor="@color/text"
            android:textSize="25sp" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/involve_regular"
            android:gravity="center_horizontal"
            android:text="Введите e-mail, котрый вы указали при регистрации"
            android:textColor="@color/textSecondary"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="281dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_white_semcorners_item"
                android:fontFamily="@font/involve_regular"
                android:hint="E-mail..."
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reset_button_text"
                android:layout_width="281dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_registr_semcorners_item"
                android:fontFamily="@font/involve_bold"
                android:gravity="center"
                android:text="Сбросить"
                android:textColor="@color/textOnPrimary"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/resetIsSuccessful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="275dp"
        android:visibility="gone">
        <TextView
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="Проверьте свой email. Мы отправили вам письмо со ссылкой для сброса пароля"
            android:gravity="center_horizontal"
            android:fontFamily="@font/involve_regular"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"/>
        <LinearLayout
            android:id="@+id/toLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toLogin_ButtonText"
                android:layout_width="281dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_registr_semcorners_item"
                android:fontFamily="@font/involve_bold"
                android:gravity="center"
                android:text="Назад"
                android:textColor="@color/inputs"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>








</LinearLayout>