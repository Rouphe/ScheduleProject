<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SignInScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPairIsNow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NameAppSignInScreen"
            android:layout_width="281dp"
            android:layout_height="106dp"
            android:fontFamily="@font/involve_bold"
            android:gravity="center"
            android:text="РАСПИСАНИЕ КГУ"
            android:textColor="@color/text"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SignIn_authorization_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/involve_medium"
            android:gravity="center"
            android:text="ВХОД"
            android:textColor="@color/text"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="78dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Login"
            android:layout_width="281dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_white_semcorners_item"
            android:fontFamily="@font/involve_regular"
            android:hint="E-mail..."
            android:padding="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Password"
            android:layout_width="281dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_white_semcorners_item"
            android:fontFamily="@font/involve_regular"
            android:hint="Пароль..."
            android:padding="12dp"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Показать пароль"
            android:fontFamily="@font/involve_regular"
            android:textSize="12dp"
            android:padding="6dp"
            android:textColor="@color/textSecondary"/>

        <CheckBox
            android:id="@+id/remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/involve_regular"
            android:textSize="12dp"
            android:text="Запомнить меня"
            android:textColor="@color/textSecondary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_button_text"
            android:layout_width="281dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_registr_semcorners_item"
            android:fontFamily="@font/involve_bold"
            android:gravity="center"
            android:text="Войти"
            android:textColor="@color/textOnPrimary"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NotRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Еще не зарегистрированы?"
            android:fontFamily="@font/involve_regular"
            android:textColor="@color/textSecondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TransferToRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Зарегистрироваться"
            android:fontFamily="@font/involve_semibold"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/toReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Забыли пароль?"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/involve_semibold"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"/>
    </LinearLayout>




</LinearLayout>
