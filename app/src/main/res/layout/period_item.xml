<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/timeStartAndEnd"
            android:layout_width="31dp"
            android:layout_marginStart="8dp"
            android:layout_height="30dp"
            android:fontFamily="@font/involve_medium"
            android:gravity="center"
            android:text="09:40 11:10"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>

    <Space
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/typeAndNameDis"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/involve_medium"
            android:text="Практика|Геометрия и топология"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/infoTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/involve_regular"
            android:text="Селиванова И.Н. Ст. преподаватель"
            android:textColor="#262933"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/numAudit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/involve_medium"
            android:text="202"
            android:layout_marginBottom="4dp"
            android:textColor="#0229B3"
            android:textSize="12dp" />

    </LinearLayout>
</LinearLayout>
