<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/FirstTimeStartAndEnd"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/involve_medium"
            android:gravity="center"
            android:text="08:00 09:30"
            android:textColor="?attr/colorOnBackground"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundFloating"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/typeAndNameDis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лекция | Дискретная математика"
            android:textSize="16dp"
            android:textColor="?attr/colorOnBackground"
            android:fontFamily="@font/involve_medium"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/infoTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Водолад С.Н. Декан"
            android:textSize="10dp"
            android:textColor="?attr/colorBackgroundFloating"
            android:fontFamily="@font/involve_regular" />

        <TextView
            android:id="@+id/numAudit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="206"
            android:textSize="12dp"
            android:textColor="?attr/colorButtonNormal"
            android:fontFamily="@font/involve_medium"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

</LinearLayout>
