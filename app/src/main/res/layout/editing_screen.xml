<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_cap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_editing_cap_item"
        android:padding="16dp">


        <LinearLayout
            android:id="@+id/your_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_registr_semcorners_item"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/involve_bold"
                android:text="Ваше имя"
                android:textColor="@color/navbar_white_text"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/userFirstNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="19dp"
                android:background="#0229B3"
                android:fontFamily="@font/involve_regular"
                android:hint="Имя..."
                android:textColor="#C0CEFF"
                android:textColorHint="#8194D9"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/userLastNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="19dp"
                android:background="#0229B3"
                android:fontFamily="@font/involve_regular"
                android:hint="Фамилия..."
                android:textColor="#C0CEFF"
                android:textColorHint="#8194D9"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/userMiddleNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="12dp"
                android:background="#0229B3"
                android:fontFamily="@font/involve_regular"
                android:hint="Отчество..."
                android:textColor="#C0CEFF"
                android:textColorHint="#8194D9"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/actual_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_registr_semcorners_item"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/involve_bold"
                android:text="Актуальная информация"
                android:textColor="@color/navbar_white_text"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_edit_button_profile_item"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/involve_regular"
                    android:text="Факультет:"
                    android:textColor="#C0CEFF"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/teachersFacultyEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginVertical="8dp"
                    android:background="#001D82"
                    android:fontFamily="@font/involve_regular"
                    android:hint="..."
                    android:textColorHint="#8194D9"
                    android:textSize="16dp"
                    android:textColor="#C0CEFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/involve_regular"
                    android:text="Кафедра:"
                    android:textColor="#C0CEFF"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/teacherDepartmentEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="#001D82"
                    android:fontFamily="@font/involve_regular"
                    android:hint="..."
                    android:textColorHint="#8194D9"
                    android:textSize="16dp"
                    android:textColor="#C0CEFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/involve_regular"
                    android:text="Дополнительная информация:"
                    android:textColor="#C0CEFF"
                    android:textSize="16dp"
                    android:layout_marginVertical="6dp"/>

                <EditText
                    android:id="@+id/teachersInfoEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginBottom="6dp"
                    android:background="#001D82"
                    android:fontFamily="@font/involve_regular"
                    android:hint="..."
                    android:textColorHint="#8194D9"
                    android:textSize="16dp"
                    android:textColor="#C0CEFF"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editing_save"
            android:layout_width="112dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_registr_semcorners_item"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actual_information">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/checkmark" />

            <TextView
                android:id="@+id/saveButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/involve_regular"
                android:text="Сохранить"
                android:textColor="#C0CEFF"
                android:textSize="10dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <include
        android:id="@+id/custom_navbar"
        layout="@layout/custom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>